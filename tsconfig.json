{
    "include": ["src"],
    "compilerOptions": {
        "module": "Node16",
        "moduleResolution": "Node16",
        "moduleDetection": "force",
        "target": "ES2022",
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "resolveJsonModule": false,
        "keyofStringsOnly": true,
        "skipLibCheck": true,
        "noEmitOnError": true
    },
    "ts-node": {
        "transpileOnly": true,
        "files": true,
        "experimentalResolver": true
    }
}
